<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath*:test-db.xml"/>

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="bankAccountSpringJdbcDao" class="com.epam.brest.dao.impl.BankAccountSpringJdbcDao">
        <constructor-arg name="namedParameterJdbcTemplate" ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="bankAccountDtoSpringJdbcDao" class="com.epam.brest.dao.impl.BankAccountDtoSpringJdbcDao">
        <constructor-arg name="namedParameterJdbcTemplate" ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="creditCardSpringJdbcDao" class="com.epam.brest.dao.impl.CreditCardSpringJdbcDao">
        <constructor-arg name="namedParameterJdbcTemplate" ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="creditCardDtoSpringJdbcDao" class="com.epam.brest.dao.impl.CreditCardDtoSpringJdbcDao">
        <constructor-arg name="namedParameterJdbcTemplate" ref="namedParameterJdbcTemplate"/>
    </bean>

</beans>